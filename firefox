#!/bin/sh
# $Id: firefox,v 1.8 2015/09/07 08:52:36 friedman Exp $

prog=`run-next -p "$0"`

case $* in
    *-ProfileManager* ) run-misc.sh "$prog" "$@" ;;
esac

numscreens=`xdpyinfo | sed -n -e '/^number of screens: */s///p'`
case $numscreens in
    1 ) exec run-misc.sh "$prog" "$@" ;;
esac

case $DISPLAY in
    :*.0 ) set fnord -P firefox     "$@"; shift ;;
    :*.1 ) set fnord -P firefox.2nd "$@"; shift ;;
esac

exec run-misc.sh "$prog" "$@"

# eof
