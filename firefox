#!/bin/sh
# $Id: firefox,v 1.10 2017/07/07 03:14:09 friedman Exp $

prog=`run-next -p "$0"`
ffox() { exec run-misc.sh "$prog" "$@"; }

case $* in *-ProfileManager* ) ffox "$@" ;; esac

numscreens=`xdpyinfo | sed -n -e '/^number of screens: */s///p'`
case $numscreens$DISPLAY in
    2:*.0 ) ffox -P firefox     "$@" ;;
    2:*.1 ) ffox -P firefox.2nd "$@" ;;
    * ) ffox "$@" ;;
esac

# eof
