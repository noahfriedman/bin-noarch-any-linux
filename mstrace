#!/bin/sh
# $Id: mstrace,v 1.3 2006/02/03 20:46:29 friedman Exp $

case :${HEX+set}:${hex+set}: in
  *:set:* ) set fnord -e read=all -e write=all ${1+"$@"}; shift ;;
esac

exec ${STRACE-strace}   \
        -e abbrev=none  \
        -e signal=all   \
        -e trace=all    \
        -e verbose=all  \
        -s 65535        \
        -S name         \
        -F -f -v -T -y  \
        ${1+"$@"}
