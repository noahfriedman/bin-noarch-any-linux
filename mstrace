#!/bin/sh
# $Id: mstrace,v 1.4 2015/02/19 00:04:19 friedman Exp $

case :${HEX+set}:${hex+set}: in
  *:set:* ) set x -e read=all -e write=all "$@"; shift ;;
esac

set x ${STRACE-strace}   \
         -e abbrev=none  \
         -e signal=all   \
         -e trace=all    \
         -e verbose=all  \
         -s 65535        \
         -S name         \
         -F -f -v -T -y  \
         "$@"
shift

${MSTRACE_CMD-exec} "$@"

# eof
