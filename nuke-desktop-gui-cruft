#!/bin/sh
# $Id: nuke-desktop-gui-cruft,v 1.7 2011/10/10 03:45:14 friedman Exp $

procs='
  /^gvfsd/
  /^gvfs-/
  /gnome-.*-daemon/
  gnome-screensaver
  menu-cached
  notification-daemon
  dconf-service
  idn
  aspell
'

extra='
  npviewer.bin
  mozplugger-helper
'

case $1 in
  -f ) procs="$procs $extra"; shift ;;
esac

exec mkill $procs

# eof
