#!/bin/sh
# $Id: openvpn-ctl,v 1.4 2014/09/09 19:45:00 friedman Exp $

usage()
{
    {
        echo "Usage: ${0##*/} [start|stop|restart|status] {target}"
        echo
        echo "If no target specified, uses splode or splode-proxy."
        echo "Target is ignored if not using systemd."
    } 1>&2
    exit 1
}

docmd()
{
    echo + "$@" 1>&2
    "$@"
}

sctl()
{
    action=$1
    target=$2

    file=/var/run/.check-openvpn
    name=${target#openvpn@}
    name=${name%.service}

    case $action:$target in
        *start:*splode* ) echo $name > $file ;;
          stop:*splode* ) rm -f        $file ;;
    esac

    docmd systemctl $action $target
}

mode_target()
{
    action=$1 target=$2
    sctl $action $target
}

mode_default()
{
    action=$1

    system_targets=nil
    targdir=/etc/systemd/system/openvpn.target.wants
    if [ -d $targdir ]; then
        for svc in $targdir/*; do
            svc=${svc#$targdir/}
            case $svc in
                openvpn@*.service )
                    system_targets=t
                    sctl $action $svc ;;
            esac
        done
    fi

    if [ $system_targets = nil ]; then
        get_splode_target
        sctl $action $target
    fi
}

get_splode_target()
{
    if egrep -q '0000(00|7F):2EA4' /proc/net/tcp ; then
        target=openvpn@splode-proxy.service
    else
        target=openvpn@splode.service
    fi
}

main()
{
    case $# in
        1 ) mode=default action=$1 ;;
        2 ) mode=target  action=$1 target=openvpn@$2.service ;;
        * ) usage ;;
    esac

    if [ -f /etc/init.d/openvpn ]; then
        docmd service openvpn $action
    else
        mode_$mode $action $target
    fi
}

main "$@"

# eof
