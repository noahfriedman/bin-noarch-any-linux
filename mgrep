#!/bin/bash
# $Id: mgrep,v 1.2 2017/07/19 02:00:41 friedman Exp $

# Add -I or --binary-files=without-match skip binary files

options=(--perl-regexp

         --devices=skip
         --directories=recurse

         --line-number
         --initial-tab

         --exclude='*~'
         --exclude='*.elc'
         --exclude='*.[oa]'
         --exclude=COPYING
         --exclude=LICENSE

         --exclude-dir=CVS
         --exclude-dir=.bzr
         --exclude-dir=.git
         --exclude-dir=.hg
         --exclude-dir=.svn

         #--color=auto
      )

exec grep "${options[@]}" "$@"

# eof
